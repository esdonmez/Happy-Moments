<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codeifit.happymoments">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme.Base">

        <activity android:name="com.codefiti.happymoments.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.codefiti.happymoments.SettingsActivity" />
        <activity android:name="com.codefiti.happymoments.ContactActivity" />
        <activity android:name="com.codefiti.happymoments.DetailsGiftWalletActivity" />
        <activity android:name="com.codefiti.happymoments.LoginActivity" />
        <activity android:name="com.codefiti.happymoments.MakeHappyActivity" />
        <activity android:name="com.codefiti.happymoments.TokenActivity" />
        <activity android:name="com.codefiti.happymoments.SSSActivity" />
        <activity android:name="com.codefiti.happymoments.MyCreditCardsActivity"></activity>
    </application>

</manifest>