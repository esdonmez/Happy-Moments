                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginRight="0dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="#585858"
                                    android:text="esd"
